{% assign page_path = canonical_link | remove: ".html" | stripe %}

{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Article",
      "@id": "{{ page_path }}#article",
      "isPartOf": {
          "@id": "{{ page_path }}"
      },
      "author": {
          "@id": "{{ site.url }}/#/schema/author"
      },
      "headline": "{{ page.description | default: site.description }}",
      "datePublished": "{{ page.date | date_to_xmlschema }}",
      "dateModified": "{{ site.time | date_to_xmlschema }}",
      "url":  "{{ canonical_link }}",
      "mainEntityOfPage": {
          "@id": "{{ page_path }}"
      },
      "wordCount": {{ page.content | number_of_words }},
      "publisher": {
          "@id": "{{ site.url }}/#organization"
      },
      "image": {
          "@id": "{{ page_path }}#primaryimage"
      },
      {% if page.image.url %}
          "thumbnailUrl": "{{site.url}}{{ page.image.url }}",
      {% else %}
          "thumbnailUrl": "{{site.url}}{{ site.image }}",
      {% endif %}
      "inLanguage": "ru-RU",
      "copyrightYear": "2022",
      "copyrightHolder": {
        "@id": "{{ site.url }}/#organization"
      }
      {% if page.video %}
      ,
      "video": [
        {
          "@id": "{{ page_path }}#video"
        }
      ]
      {% endif %}
    },
    {
      "@type": "WebPage",
      "@id": "{{ page_path }}",
      "url": "{{ cannonical_url }}",
      "name": "{{ page.title }}",
      "isPartOf": {
        "@id": "{{ site.url }}/#website"
      },
      "primaryImageOfPage": {
        "@id": "{{ page_path }}#primaryimage"
      },
      "image": {
        "@id": "{{ page_path }}#primaryimage"
      },
      {% if page.image.url %}
          "thumbnailUrl": "{{ site.url }}{{ page.image.url }}",
      {% else %}
          "thumbnailUrl": "{{ site.url }}{{ site.image }}",
      {% endif %}
      "datePublished": "{{ page.date | date_to_xmlschema }}",
      "dateModified": "{{ site.time | date_to_xmlschema }}",
      {% if page.description %}
          "description": "{{ page.description }}",
      {% else %}
          "description": "{{ site.description }}",
      {% endif %}
      "breadcrumb": {
        "@id": "{{ page_path }}#breadcrumb"
      },
      "inLanguage": "ru-RU",
      "potentialAction": [
        {
          "@type": "ReadAction",
          "target": [
            "{{ canonical_link }}"
          ]
        }
      ],
      "author": {
        "@id": "{{ site.url }}/#/schema/author"
      }
      {% if page.video %}
        ,
        "video": [
          {
            "@id": "{{ page_path }}#video"
          }
        ]
      {% endif %}
    },
    {
      "@type": "ImageObject",
      "inLanguage": "ru-RU",
      "@id": "{{ page_path }}#primaryimage",
      {% if page.image.url %}
        "url": "{{site.url}}{{ page.image.url }}",
        "contentUrl": "{{site.url}}{{ page.image.url }}",
        {% if page.image.width %}
          "width": {{ page.image.width }},
          "height": {{ page.image.height }},
        {% endif %}
      {% else %}
        "url": "{{site.url}}/assets/images/logo/ttm-help-logo-1.jpg",
        "contentUrl": "{{site.url}}/assets/images/logo/ttm-help-logo-1.jpg",
        "width": 1200,
        "height": 742,
      {% endif %}
      "caption": "{{ page.description | default: site.description }}"
    },
    {
      "@type": "BreadcrumbList",
      "@id": "{{ page_path }}#breadcrumb",
      "itemListElement": [
            {
                "@type": "ListItem",
                "position": 1,
                "name": "Главная",
                "item": "{{site.url}}"
            }
            {% if page.layout == "post" %}
            ,{
                "@type": "ListItem",
                "position": 2,
                "name": "Статьи",
                "item": "{{ site.url }}{% link posts.md %}"
            },
            {% for site_category in site.data.categories.list %}
                {% if site_category.name == page.category %}
                        {
                          "@type": "ListItem",
                          "position": 3,
                          "name": "{{ site_category.name }}",
                          "item": "{{ site.url }}{{ site_category.url }}"
                        },
                {% endif %}
            {% endfor %}
            {
                "@type": "ListItem",
                "position": 4,
                "name": "{{ page.title }}",
                "item": "{{ canonical_link }}"
            }
            {% elsif page.url != "/" %}
            ,{
                "@type": "ListItem",
                "position": 2,
                "name": "{{page.title}}",
                "item": "{{ canonical_link }}"
            }
            {% endif %}
      ]
    },
    {
      "@type": "WebSite",
      "@id": "{{ site.url }}/#website",
      "url": "{{ site.url }}",
      "name": "{{ site.title }}",
      "description": "{{ site.description }}",
      "publisher": {
        "@id": "{{ site.url }}/#organization"
      },
      "inLanguage": "ru-RU"
    },
    {
    "@type": "ImageObject",
    "inLanguage": "ru-RU",
    "@id": "{{ site.url }}/#/schema/logo/image/",
    "url": "{{site.url}}/assets/images/logo/ttm-help-logo-1.jpg",
    "contentUrl": "{{site.url}}/assets/images/logo/ttm-help-logo-1.jpg",
    "width": 1200,
    "height": 742,
    "caption": "{{ site.description }}"
    },
    {
      "@type": "Organization",
      "@id": "{{ site.url }}/#organization",
      "name": "Проект TTM HELP",
      "url": "{{ site.url }}",
      "logo": {
        "@id": "{{ site.url }}/#/schema/logo/image/"
      },
      "sameAs": [
          {% for item in site.data.social %}
              "{{ item.link }}"
              {% if forloop.last == false %}
                ,
              {% endif %}
          {% endfor %}
      ],
      "image": {
        "@id": "{{ site.url }}/#/schema/logo/image/"
      }
    },
    {
      "@type": "Person",
      "@id": "{{ site.url }}/#/schema/author",
      "name": "{{ site.author.name }}",
      "knowsAbout": "{{ site.author.about }}",
      {% assign names = site.author.name | split: " " %}
      "givenName": "{{ names[0] }}",
      "familyName": "{{ names[1] }}",
      "jobTitle": "Психотерапевт",
      "image": {
          "@type": "ImageObject",
          "url": "{{ site.url }}/assets/images/illustrations/about-photo-1.webp",
          "contentUrl": "{{ site.url }}/assets/images/illustrations/about-photo-1.webp",
          "width": 1200,
          "height": 1524,
          "caption": "{{ site.author.name }} - {{ site.author.about }}"
      },
      "url": "{{ site.url }}{% link about.md %}",
      "email": "mailto:{{site.data.contact.email}}",
      {% assign contacts = site.data.contact %}
      "sameAs": [
          "{{ contacts.whatsapp }}",
          "{{ contacts.telegram }}"
      ]
    }
    {% if page.video %}
    ,
    {
      "@type": "VideoObject",
      "@id": "{{ page_path }}#video",
      "name": "{{ page.title | default: site.title }}",
      "isPartOf": {
        "@id": "{{ page_path }}#article"
      },
      "thumbnailUrl": "{{site.url}}{{ page.video.image | default: page.image.url }}",
      "description": "{{ page.description |default: site.description }}",
      "uploadDate": "{{ page.date | date_to_xmlschema }}",
      "width": 1280,
      "height": 720,
      "embedUrl": "{{ page.video.url }}",
      "duration": "{{ page.video.duration }}",
      "isFamilyFriendly": true,
      "inLanguage": "ru-RU"
    }
    {% endif %}
  ]
}