<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">

    {% for p in site.posts %}
        {% if p.video and p.video.url contains "youtube" %}
            <url>
                <loc>{{ site.url }}{{ p.url }}</loc>
                <video:video>
                    <video:title>{{ p.title | xml_escape }}</video:title>
                    <video:description>{{ p.description | xml_escape }}</video:description>
                    <video:thumbnail_loc>{{ site.url }}{{ p.image }}</video:thumbnail_loc>
                    <video:player_loc allow_embed="yes">{{ p.video.url }}</video:player_loc>
                    {% if p.date %}<video:publication_date>{{ p.date | date_to_xmlschema }}</video:publication_date>{% endif %}
                </video:video>
            </url>
        {% endif %}
    {% endfor %}
</urlset>
